<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View vehiculo -->
        <record id="view_vehiculo" model="ir.ui.view">
            <field name="name">concesionario.vehiculo</field>
            <field name="model">concesionario.vehiculo</field>
            <field name="arch" type="xml">
                <form string="Vehiculo">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="marca"/>
                            <field name="modelo"/>
                            <field name="color"/>
                            <field name="matricula"/>
                            <field name="precio"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- View vehiculo tree -->
        <record id="view_vehiculo_tree" model="ir.ui.view">
            <field name="name">concesionario.vehiculo_tree</field>
            <field name="model">concesionario.vehiculo</field>
            <field name="arch" type="xml">
                <tree string="Vehiculo">
                    <field name="name"/>
                    <field name="marca"/>
                    <field name="modelo"/>
                    <field name="color"/>
                    <field name="matricula"/>
                    <field name="precio"/>
                </tree>
            </field>
        </record>
        <!-- View vehiculo search -->
        <record id="view_vehiculo_search" model="ir.ui.view">
            <field name="name">concesionario.vehiculo_search</field>
            <field name="model">concesionario.vehiculo</field>
            <field name="arch" type="xml">
                <search string="Vehiculo">
                    <field name="name"/>
                    <field name="marca"/>
                    <field name="modelo"/>
                    <field name="color"/>
                    <field name="matricula"/>
                    <field name="precio"/>
                </search>
            </field>
        </record>
    
    </data>
</odoo>